/* miniprogram/pages/createPlan/createPlan.wxss */
.warn {
  color: #e64340 !important;
}

/* step 1 */
.title-block {
  padding: 32rpx 40rpx;
}
.input-placeholder {
  font-size: 17px;
  color: #aaa;
}

.textarea-block {
  border-top: 1px #f2f2f2 solid;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
}
.textarea-block > textarea {
  width: 100%;
  min-height: 120rpx;
}
.textarea-block > .clipboard {
  font-size: 11px;
  font-weight: bold;
  color: #aaa;
  margin: 32rpx 40rpx 0 0;
  padding: 8rpx;
  border-radius: 4rpx;
  border: 1px #aaa solid;
  white-space: nowrap;
}

.tab-block {
  padding: 32rpx;
}
.tabs {
  display: flex;
  flex-direction: row;
}
.tab {
  width: 0;
  flex-grow: 1;
  margin-left: -.5px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* normal tab styles*/
  border: .5px solid #3ABB6A;
  padding: 28rpx 0;
}
.tab:first-child {
  margin-left: 0;
  border-radius: 8rpx 0 0 8rpx;
}
.tab:last-child {
  border-radius: 0 8rpx 8rpx 0;
}
.tab.highlight {
  background-color: #3ABB6A;
  box-shadow: 0 6rpx 16rpx rgba(57, 130, 84, 0.2);
}
.tab > image {
  margin-top: 4rpx;
  margin-bottom: 20rpx;
  height: 52rpx;
  width: 100rpx;
}
.tab > .tab-title {
  font-size: 16px;
  font-weight: bold;
  color: #3ABB6A;
}
.tab.highlight > .tab-title {
  color: #fff;
}
.tab > .tab-subtitle {
  margin-top: 3px;
  font-size: 13px;
  color: #63c587;
}
.tab.highlight > .tab-subtitle {
  color: #CAF3D9;
}


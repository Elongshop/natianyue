/**app.wxss**/
page {
  background-color: #f2f2f2;
  display: flex;
  flex-direction: column;
  align-items: center;
}

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}

input, textarea {
  color: #000;
  font-size: 17px;
}

.editor-scroll {
  max-height: 60vh;
}

.breathing {
  animation: breathe 2s linear infinite;
}
@keyframes breathe {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.2;
  }
}